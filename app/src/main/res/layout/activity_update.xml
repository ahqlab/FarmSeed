                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border_rect_gray"
                                    android:id="@+id/tel3"
                                    android:text="@={domain.handphone3}"
                                    android:layout_margin="16dp"
                                    android:padding="4dp"
                                    android:textSize="12sp"
                                    android:maxLines="1"/>

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal|center_vertical"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:background="@drawable/gray_rect_bottom_border_gray"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/deep_red_text"
                                android:textSize="12dp"
                                android:text="@string/star"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:text="E-MAIL"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bottom_border_gray"
                            android:orientation="vertical">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border_rect_gray"
                                android:id="@+id/email"
                                android:text="@={domain.email}"
                                android:layout_margin="16dp"
                                android:padding="4dp"
                                android:textSize="12sp"
                                android:maxLines="1"/>

                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal|center_vertical"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:background="@drawable/gray_rect_bottom_border_gray"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/deep_red_text"
                                android:textSize="12dp"
                                android:text="@string/star"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:text="주소"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bottom_border_gray"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <EditText
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border_rect_gray"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_marginBottom="16dp"
                                    android:id="@+id/zipcorde"
                                    android:text="@={domain.zipcorde}"
                                    android:padding="4dp"
                                    android:textSize="12sp"
                                    android:maxLines="1"
                                    />

                                <Button
                                    android:layout_width="100dp"
                                    android:layout_height="25dp"
                                    android:background="@drawable/common_blue_btn"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="8dp"
                                    android:onClick="@{activity::onClickZipcodeBtnClick}"
                                    android:text="우편번호"/>

                            </LinearLayout>



                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border_rect_gray"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:id="@+id/address"
                                android:text="@={domain.address1}"
                                android:padding="4dp"
                                android:textSize="12sp"
                                android:maxLines="1"
                                />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border_rect_gray"
                                android:layout_marginTop="16dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_marginBottom="16dp"
                                android:id="@+id/address1"
                                android:text="@={domain.address2}"
                                android:padding="4dp"
                                android:textSize="12sp"
                                android:maxLines="1"
                                />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


                <!-- 금융계좌정보 -->
