<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <gradient
                android:centerY="0.2"
                android:startColor="#579cc6"
                android:centerColor="#579cc6"
                android:endColor="#579cc6"
                android:angle="180"
                />
            <stroke
                android:width="1dp"
                android:color="#3c89b5" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
</selector>