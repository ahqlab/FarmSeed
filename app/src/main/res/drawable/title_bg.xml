<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <gradient
                android:centerY="0.2"
                android:startColor="#25b2ce"
                android:centerColor="#3981b1"
                android:endColor="#4e468f"
                android:angle="180"
                />
            <stroke
                android:width="1dp"
                android:color="@color/common_btn_line_color" />
            <corners
                android:radius="0dp" />
        </shape>
    </item>
</selector>