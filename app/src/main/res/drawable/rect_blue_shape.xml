<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_focused="false" android:state_enabled="true">
        <shape>
            <gradient
                android:centerY="0.2"
                android:startColor="#4A6CA2"
                android:centerColor="#4B7DAC"
                android:endColor="#50A1BC"
                android:angle="0"
                />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#4cc7c7cd"/>
            <corners android:radius="58dp" />
        </shape>

    </item>
</selector>